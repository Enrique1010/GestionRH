@model IEnumerable<GestionRH.Models.ProcessSalidaEmpleado>

@{
    ViewData["Title"] = "Salida de Empleado";
}

<h1>Salida de Empleado</h1>

<p>
    <a asp-action="Create">Guardar Registro de Salida del Empleado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="table-dark">
                @Html.DisplayNameFor(model => model.Empleado)
            </th>
            <th class="table-dark">
                @Html.DisplayName("Tipo de Salida")
            </th>
            <th class="table-dark">
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
            <th class="table-dark">
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th class="table-dark"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDeSalida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Borrar Registro</a>
            </td>
        </tr>
}
    </tbody>
</table>

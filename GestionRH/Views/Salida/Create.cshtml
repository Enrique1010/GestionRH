@model GestionRH.Models.ProcessSalidaEmpleado
@{
    ViewData["Title"] = "Salida";
}

<h1>Inhabilitar</h1>

<h4>Proceso de Salida de un Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Empleado" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text" asp-for="Empleado">Empleados</label>
                    </div>
                    <select asp-for="Empleado" class="custom-select">
                        @foreach (var item in ViewBag.emps)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="Empleado" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoDeSalida" class="control-label">Tipo de Salida</label><br />
                <input type="radio" asp-for="TipoDeSalida" value="Despido" />Despido<br />
                <input type="radio" asp-for="TipoDeSalida" value="Renuncia" />Renuncia<br />
                <input type="radio" asp-for="TipoDeSalida" value="Deshaucio" />Deshaucio<br />
                <span asp-validation-for="TipoDeSalida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <input asp-for="Motivo" class="form-control" />
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Inhabilitar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a Lista</a>
</div>



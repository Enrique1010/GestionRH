
@{
    ViewData["Title"] = "Index";
}

<h1 class="d-flex justify-content-center">Gestion de Recursos Humanos</h1>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" name="klk">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="~/1.jpg" alt="First slide" height="590px">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="~/2.jpg" alt="Second slide" height="590px" >
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="~/3.jpg" alt="Third slide" height="590px">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<br />

<form>
    <div class="form-actions no-color d-flex justify-content-center">
        <a class="form-control text-center btn-outline-success nav-item" asp-controller="Empleados" asp-action="Index">Empleados</a>
        <a class="form-control text-center btn-outline-success nav-item" asp-controller="Departamentos" asp-action="Index">Departamentos</a>
        <a class="form-control text-center btn-outline-success nav-item" asp-controller="Cargos" asp-action="Index">Cargos</a>
    </div>
</form>
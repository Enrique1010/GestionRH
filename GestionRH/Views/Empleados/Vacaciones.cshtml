@model GestionRH.Models.ProcessVacaciones

@{
    ViewData["Title"] = "Vacaciones";
}

<h1>Vacaciones</h1>

<h4>ProcessVacaciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Vacaciones">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Empleado" class="control-label"></label>
                <input asp-for="Empleado" class="form-control" />
                <span asp-validation-for="Empleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desde" class="control-label"></label>
                <input asp-for="Desde" class="form-control" />
                <span asp-validation-for="Desde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hasta" class="control-label"></label>
                <input asp-for="Hasta" class="form-control" />
                <span asp-validation-for="Hasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correspondiente" class="control-label"></label>
                <input asp-for="Correspondiente" class="form-control" />
                <span asp-validation-for="Correspondiente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a Lista Completa</a>
</div>


@model GestionRH.Models.MantenimientoEmpleado
@{
    ViewData["Title"] = "Crear";
}

<h1>Agregar Empleado</h1>

<h4>Mantenimiento Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Empleado" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodigoEmpleado" class="control-label"></label>
                <input asp-for="CodigoEmpleado" class="form-control" />
                <span asp-validation-for="CodigoEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaIngreso" class="control-label"></label>
                <input asp-for="FechaIngreso" class="form-control" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                    <label class="input-group-text" asp-for="Departamento">Departamentos</label>
                </div>
                <select asp-for="Departamento" class="custom-select">
                    @foreach (var itemd in ViewBag.deps)
                    {
                        <option value="@itemd">@itemd</option>
                    }
                </select>
            </div>
            <br />
            <div class="input-group">
                <label asp-for="Salario" class="input-group-text">Salario</label>
                <label asp-for="Salario" class="input-group-text">RD$</label>
                <input asp-for="Salario" class="form-control" />
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <label class="input-group-text" asp-for="Cargo">Cargos</label>
                    </div>
                    <select asp-for="Cargo" class="custom-select">
                        @foreach (var itemc in ViewBag.carg)
                        {
                            <option value="@itemc">@itemc</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a Lista Completa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

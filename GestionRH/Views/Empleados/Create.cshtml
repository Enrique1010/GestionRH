
@model GestionRH.Models.ViewModel.DepEmp
@{
    ViewData["Title"] = "Crear";
}

<h1>Create</h1>

<h4>Mantenimiento Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Empleado.CodigoEmpleado" class="control-label"></label>
                <input asp-for="Empleado.CodigoEmpleado" class="form-control" />
                <span asp-validation-for="Empleado.CodigoEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Nombre" class="control-label"></label>
                <input asp-for="Empleado.Nombre" class="form-control" />
                <span asp-validation-for="Empleado.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Apellido" class="control-label"></label>
                <input asp-for="Empleado.Apellido" class="form-control" />
                <span asp-validation-for="Empleado.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Telefono" class="control-label"></label>
                <input asp-for="Empleado.Telefono" class="form-control" />
                <span asp-validation-for="Empleado.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.FechaIngreso" class="control-label"></label>
                <input asp-for="Empleado.FechaIngreso" class="form-control" />
                <span asp-validation-for="Empleado.FechaIngreso" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Empleado.Departamento" class="control-label"></label>
                <input asp-for="Empleado.Departamento" class="form-control" />
                <span asp-validation-for="Empleado.Departamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Salario" class="control-label"></label>
                <input asp-for="Empleado.Salario" class="form-control" />
                <span asp-validation-for="Empleado.Salario" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Empleado.Estatus" /> @Html.DisplayName("Presione para Activar")
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Empleado.Cargo" class="control-label"></label>
                <input asp-for="Empleado.Cargo" class="form-control" />
                <span asp-validation-for="Empleado.Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a Lista Completa</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
